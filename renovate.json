{
    "extends": [
        "config:base"
    ],
    "prConcurrentLimit": 4,
    "timezone": "utc",
    "schedule": [
        "after 5:00 am before 11:00 am"
    ],
    "pip-compile": {
        "fileMatch": [
            "(^|/)requirements\\.in$",
            "(^|/)dev-requirements\\.in$"
        ]
    },
    "packageRules": [
        {
            "matchManagers": ["pip-compile"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "automergeType": "branch",
            "rebaseWhen": "behind-base-branch"
        }
    ]
}
